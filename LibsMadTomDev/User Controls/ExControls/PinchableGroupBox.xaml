<UserControl x:Class="MadTomDev.UI.PinchableGroupBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox>
        <GroupBox.Header>
            <Grid>
                <CheckBox x:Name="checkBox" Content="{Binding  HeaderText}"
                          Checked="Cb_Checked" Unchecked="Cb_Unchecked"></CheckBox>
            </Grid>
        </GroupBox.Header>
        <ContentControl x:Name="contentControl" Content="{Binding Content}"></ContentControl>
    </GroupBox>
</UserControl>
