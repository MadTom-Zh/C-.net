<Window x:Class="MadTomDev.UI.WindowDelayStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MadTomDev.UI"
        mc:Ignorable="d"
        Title="DelayStart  v2023 0725" Height="180" Width="200"
        Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tb_title" Margin="10,10,10,0" TextWrapping="Wrap" Text="[Title]"
                 VerticalAlignment="Top" IsReadOnly="True" TextAlignment="Center"/>
        <ProgressBar x:Name="pb_countDown" Height="16" Margin="10,33,10,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tb_countDown" Margin="10,33,10,0" TextWrapping="Wrap" Text="000. 00:00:00. 000" VerticalAlignment="Top"
                   TextAlignment="Center"/>
        <TextBox x:Name="tb_cmds" Margin="10,54,10,35" TextWrapping="Wrap" Text="[Cmd(s)]" IsReadOnly="True"/>
        <Button x:Name="btn_cancel" Click="btn_cancel_Click" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="53"/>

    </Grid>
</Window>
