<Window xmlns:ColorExpertControls="clr-namespace:MadTomDev.UI.ColorExpertControls"  
        x:Class="MadTomDev.UI.ColorExpertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MadTomDev.UI"
        mc:Ignorable="d"
        Title="ColorExpertDialog" Height="600"  Width="350">
    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <ColorExpertControls:ColorPanelAllInOne x:Name="panelAllInOne" />
            <Grid>
                <Button Content="{DynamicResource txBtn_ok}" x:FieldModifier="public" x:Name="btn_ok" Click="btn_ok_Click" Height="24" HorizontalAlignment="Right" Margin="0,10,75,10" Width="60"></Button>
                <Button Content="{DynamicResource txBtn_cancel}" x:FieldModifier="public" x:Name="btn_cancle" Height="24" Click="btn_cancle_Click" HorizontalAlignment="Right" Margin="0,10,10,10" Width="60"></Button>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
