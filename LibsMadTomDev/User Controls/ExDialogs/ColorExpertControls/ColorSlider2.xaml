             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.UI.ColorExpertControls"
             mc:Ignorable="d" 
             MinHeight="40" MaxHeight="40" d:DesignWidth="300">
    <Grid x:Name="grid">
        <Image x:Name="img_backImg" Stretch="Fill"></Image>
        <Border x:Name="bdr_handle" BorderBrush="White" BorderThickness="1" Background="Transparent"
