<UserControl x:Class="MadTomDev.UI.ColorExpertControls.ColorSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.UI.ColorExpertControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="50">
    <Grid>
        <Border x:Name="bdr_backStripe" BorderBrush="Black" BorderThickness="1" Margin="12,16,12,16">
            <Image x:Name="img_backStripe" Stretch="Fill"></Image>
        </Border>
        <Border x:Name="bdr_handle" BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Height="30" Width="50" Margin="0,20,0,0"
                Cursor="Hand"
                ></Border>
    </Grid>
</UserControl>
