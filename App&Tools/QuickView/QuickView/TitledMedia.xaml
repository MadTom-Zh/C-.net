<UserControl x:Class="MadTomDev.App.TitledMedia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.App"
             mc:Ignorable="d" 
             d:DesignHeight="118.299" d:DesignWidth="187.629">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<Border>-->
            <MediaElement x:Name="mediaElement" UnloadedBehavior="Manual"/>
        <!--</Border>-->
        <TextBlock x:Name="textBlock"  Grid.Row="1" TextAlignment="Center" Text="TextBlock" TextWrapping="NoWrap"/>

    </Grid>
</UserControl>
